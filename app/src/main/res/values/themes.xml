<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Theme.JAMITApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSurface">@color/textColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="statusBarBackground">@color/colorBackground</item>
        <item name="statusBarForeground">@color/white</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="navigationIconTint">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/brand_red</item>
        <item name="colorOnError">@color/brand_white</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="backgroundColor">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:showDividers">none</item>
        <item name="actionBarDivider">@android:color/transparent</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="popupMenuBackground">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="statusBarBackground">@color/colorBackground</item>
        <item name="statusBarForeground">@color/white</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="navigationIconTint">@color/white</item>

        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WindowAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="android:background">@color/md_grey_60</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="Theme.JAMITApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JAMITApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JAMITApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>