<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".views.fragments.FragmentTopicSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_topic_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Select a Topic"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Informational Message -->
        <TextView
            android:id="@+id/tv_topic_selection_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Choose a topic to begin your journey. Each topic has 3 levels: Beginner, Intermediate, and Advanced. You must complete and pass each level to unlock the next."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Topic 1: Phishing -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_phishing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="16dp"
            android:text="Phishing"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="16dp" />

        <!-- Topic 2: Baiting -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_baiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="16dp"
            android:text="Baiting"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="16dp" />

        <!-- Topic 3: Impersonation -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_impersonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="16dp"
            android:text="Impersonation"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primaryDarkColor"
            app:cornerRadius="16dp" />

        <!-- Topic 4: Cyberbullying -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cyberbullying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="16dp"
            android:text="Cyberbullying"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/secondaryColor"
            app:cornerRadius="16dp" />

    </LinearLayout>
</ScrollView>
